@model List<EF.SliderImage>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th align="center">
            عنوان
        </th>
        <th align="center">
            عکس

        </th>
        <th align="center">
             وضعیت
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Title
        </td>
        <td>
            <img src="@Href(item.ImagePath)" style="width:200px;height:100px" />
        </td>
        <td>
            <input type="checkbox" id="checked" name="checked" checked="@item.Status" />
        </td>
        
        
    </tr>
}

</table>
